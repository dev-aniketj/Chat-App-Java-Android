<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="4dp"
    android:background="@drawable/sender_bg"
    android:padding="4dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sender_profile_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/messageProfileBorderColor"
        app:civ_border_width="1dp" />

    <TextView
        android:id="@+id/sender_message_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="12dp"
        android:layout_toStartOf="@id/sender_profile_iv"
        android:letterSpacing="0.025"
        android:lineSpacingExtra="0.5dp"
        android:text="Sender message"
        android:textColor="@color/senderTextColor"
        android:textSize="18sp" />

</RelativeLayout>