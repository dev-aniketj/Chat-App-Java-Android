<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/user_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/bg_item_user"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_profile_iv"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/profile"
        app:civ_border_color="@color/borderColor"
        app:civ_border_width="2dp" />

    <LinearLayout
        android:id="@+id/user_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="12dp"
        android:layout_toEndOf="@id/user_profile_iv"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:letterSpacing="0.125"
            android:padding="1dp"
            android:text="User Name"
            android:textColor="@color/textColor"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/user_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:letterSpacing="0.125"
            android:padding="1dp"
            android:text="User Status"
            android:textColor="@color/textColor"
            android:textSize="17sp" />
    </LinearLayout>

</RelativeLayout>